<Window x:Class="EditAddDevice.SelectTypeDevice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditAddDevice"
        mc:Ignorable="d"
        Title="SelectTypeDevice" Height="150" Width="350" ResizeMode="NoResize">
    <Grid VerticalAlignment="Center" >
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="Выберете тип устройства" Grid.Row="0"/>
        <ComboBox  Name="TypeDevice" Grid.Row="2" Margin="0"/>
        <Button x:Name="SelectType" Content="Выбрать" Grid.Row="4"/>
    </Grid>
</Window>
