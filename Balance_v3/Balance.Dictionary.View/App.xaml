<Application x:Class="Balance.Dictionary.View.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Balance.Dictionary.View"
             xmlns:converter="clr-namespace:Balance.View.BL.Converter;assembly=Balance.View.BL"
             StartupUri="View/HomeView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Balance.View.BL;component/Resources/ButtonCircle.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
            <converter:InvertBoolConverter x:Key="invertBoolConverter"/>
            <local:ViewModelLocator x:Key="mainViewModelLocator"/>
            <FontFamily  x:Key="IconsFont">pack://application:,,,/Balance.View.BL;component/Fonts/#Segoe MDL2 Assets</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
